<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/menyu"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
               <EditText
                   android:layout_marginLeft="10dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/menyu"
                   app:layout_constraintRight_toLeftOf="@id/ovoz"
                   android:hint="Search"
                   android:id="@+id/search"
                   android:textSize="15sp"
                   android:textStyle="normal"
                   android:textColor="@color/black"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/ovoz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/search"
                app:layout_constraintRight_toLeftOf="@id/email"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/email"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ovoz"
                android:src="@drawable/ic_search"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rv"
       android:layout_marginTop="10dp"
       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       tools:listitem="@layout/item_play_market"
       app:layout_constraintTop_toBottomOf="@id/card1"
       app:layout_constraintBottom_toTopOf="@id/card2"
       android:layout_width="match_parent"
       android:layout_height="0dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/ic_console"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="center"
                android:src="@drawable/ic_app"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/ic_video_player"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/ic_book"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>